<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gamesexchange.gamesexchange.activities.user_states.UnderMaintenanceActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/maint"
        android:layout_width="124dp"
        android:layout_height="124dp"
        app:srcCompat="@drawable/ic_maintenance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/black"
        android:text="@string/we_have_maintenace_check_come_back_later"
        android:gravity="center_horizontal"
        android:layout_below="@id/maint"
        android:padding="8dp"
        android:layout_marginTop="8dp"/>


</RelativeLayout>
