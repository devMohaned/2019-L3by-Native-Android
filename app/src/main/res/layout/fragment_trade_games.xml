    <RelativeLayout
        android:id="@+id/ID_cannot_find_mutual_trade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ID_cannot_find_mutual_trade_img"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            app:srcCompat="@drawable/ic_error_triangle" />

        <TextView
            android:id="@+id/ID_cannot_find_mutual_trades_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ID_cannot_find_mutual_trade_img"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="@string/cannot_find_mutual_trade"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <Button
            android:background="@drawable/cornered_button"
            android:id="@+id/ID_refresh_trades_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="@string/refresh"
            android:layout_below="@id/ID_cannot_find_mutual_trades_text"
            />


        <ProgressBar
            android:layout_below="@id/ID_refresh_trades_btn"
            android:id="@+id/ID_refresh_trades_pb"
            android:padding="8dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ID_cannot_trade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ID_cannot_trade_img"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_negative_sign_on_medical_clipboard" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ID_cannot_trade_img"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="@string/add_location_to_trade"
            android:textColor="@color/black"
            android:textSize="22sp"
            tools:text="Add your location to Trade" />



    </RelativeLayout>







