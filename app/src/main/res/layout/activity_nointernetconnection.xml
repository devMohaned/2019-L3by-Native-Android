<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/sad_image_view"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_no_wifi" />

    <TextView
        android:id="@+id/plz_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sad_image_view"
        android:layout_centerInParent="true"
        android:padding="8dp"
        android:text="@string/no_internet_connection"
        android:textSize="24sp" />


    <Button
        android:id="@+id/ID_retry_button_no_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/plz_connect"
        android:layout_centerHorizontal="true"
        android:text="@string/try_again" />


</RelativeLayout>